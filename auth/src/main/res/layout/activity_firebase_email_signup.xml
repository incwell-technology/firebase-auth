<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:theme="@style/TextInputLayoutStyle"
        android:gravity="center"
        android:background="?colorPrimary"
        tools:context="com.incwellventure.auth.view.signup.FirebaseEmailSignupActivity">
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
              android:layout_marginBottom="32dp"
              android:text="Sign up"/>

    <com.google.android.material.textfield.TextInputLayout android:id="@+id/email"
                                                           android:layout_width="match_parent"
                                                           android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText android:layout_width="match_parent"
                                                                 android:inputType="text"
                                                                 android:hint="@string/hint_email"
                                                                 android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout android:id="@+id/password"
                                                           android:layout_width="match_parent"
                                                           android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText android:layout_width="match_parent"
                                                                 android:inputType="textPassword"
                                                                 android:hint="@string/hint_password"
                                                                 android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout android:id="@+id/confirm_password"
                                                           android:layout_width="match_parent"
                                                           android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText android:layout_width="match_parent"
                                                                 android:inputType="textPassword"
                                                                 android:hint="@string/hint_confirm_password"
                                                                 android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/signup"
            android:layout_width="wrap_content"
            android:text="@string/btn_signup"
            android:layout_marginTop="16dp"
            android:backgroundTint="@android:color/white"
            android:textColor="?colorPrimary"
            android:layout_gravity="center_horizontal"
            app:cornerRadius="18dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_height="wrap_content"/>

</LinearLayout>
